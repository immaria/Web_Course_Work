{{>head}}

<body style="background-color: #dde1e6">
  <div class="page" style="background-color: #dde1e6">
    {{>header}}
    <body>
      <div class="container" style="margin-top:100px">
        <div class="row">
          <div class="col-md-10 offset-md-1">
            <h1 class="display-4">Insertion new chord</h1>
            <form action="/chords/new" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" class="form-control" placeholder="Enter chord name..." required>
              </div>
              <div class="form-group">
                <label>Tonality</label>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="tonality" id="inlineRadio1" value="magor">
                  <label class="form-check-label" for="inlineRadio1">Magor</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="tonality" id="inlineRadio2" value="minor">
                  <label class="form-check-label" for="inlineRadio2">Minor</label>
                </div>
              </div>
              <div class="form-group">
                <label for="notesQuantity">Quantity of notes (from 3 to 6)</label>
                <input type="number" name="notesQuantity" min="3" max="6">
              </div>
              <label>Select a picture</label>
					<div class="custom-file">
						<input type="file" name="image" class="custom-file-input" id="customFile" required>
						<label class="custom-file-label" for="customFile">Choose chord picture...</label>
					</div>
              <div class="form-group row">
                <div class="col-sm-10">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </div>
              <form>
          </div>
          
        </div>
      </div>
      {{>footer}}
    </body>

    </html>