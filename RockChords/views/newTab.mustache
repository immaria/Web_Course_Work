{{>head}}

<body style="background-color: #dde1e6">
  <div class="page" style="background-color: #dde1e6">
    {{>header}}

    <body>
      <div class="container" style="margin-top:100px">
        <div class="row">
          <div class="col-md-10 offset-md-1">
            <h1 class="display-4">Add new collection</h1>
            <form action="/tabs/new" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <label>Name of collection</label>
                <input type="text" name="name" class="form-control" placeholder="Enter collection name..." required>
              </div>
              <div class="form-group">
                <label>Select chords</label>
                <br> {{#chords}}
                <input type="checkbox" name="chords_list" value="{{_id}}">{{name}} &nbsp</label>
                {{/chords}}
              </div>
              <div class="form-group">
                <label>Author: </label>
                {{user.fullname}}
                <!-- <select name="method_select" class="form-control" id="exampleFormControlSelect1">
                  {{#users}}
                  <option class="form-control" name="selectedAuthor" value="{{_id}}">{{fullname}}</option>
                  {{/users}}
                </select> -->

              </div>
              <div class="custom-file">
                <input type="file" name="image" class="custom-file-input" >
                <label class="custom-file-label" for="customFile">Select picture...</label>
              </div>
          <div class="form-group row">
            <div class="col-sm-10">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
          </div>

          <form>
        </div>
      </div>
  </div>
  </body>

  </html>