{{>head}}
<script src="/javascripts/script1.js"></script>
<link rel="stylesheet" href="stylesheets/style.css">
<body>
    <div class="page">
        {{>header}}
        <div class="container" style="margin-top:100px">
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <div class="row">
                        <div class="col">
                            <h1 class="display-4 float-left">Chord "{{chord.name}}"</h1>
                        </div>
                        {{#user.role}}
                        <div class="col">
                            <button class="btn btn-outline-danger float-right" data-toggle="modal" data-target="#exampleModal">
                                Delete
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Wait!</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure?
                                        </div>
                                        <div class="modal-footer">
                                            <form action="/chords/{{chord._id}}/delete" method="POST" enctype="multipart/form-data">
                                                <input type="hidden" name="deleted" value="5c0bd7601cf9d00016176b1b">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                <button class="btn btn-outline-danger" type="submit">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/user.role}}
                    </div>
                    <div class="row my-2 row justify-content-center">
                        <div class="col-3 my-4">
                            <img width="200" height="200" class="my-4 center-cropped" src={{chord.imageUrl}} alt="Chord">
                            <!-- <form action="/chords/{{chord._id}}/updateImage" method="POST" enctype="multipart/form-data">
                                <div class="custom-file">
                                    <input type="file" name="image" class="custom-file-input" id="customFile" required>
                                    <label class="custom-file-label" for="customFile">Choose chord picture...</label>
                                </div>
                            </form> -->
                        </div>
                        <div class="col md-auto ml-3">
                            <!-- <div class="mt-4">Tonality: {{chord.tonality}}</div>
                                    <div class="mt-4">Quantity of notes: {{chord.notesQuantity}}</div>
                                    <div class="mt-4">Date of registration: {{chord.uploadDate}}</div> -->
                            <form action="/chords/{{chord._id}}/update" method="POST" enctype="multipart/form-data">
                                <div class="form-group my-4">
                                    <label> Name</label>
                                    <input type="text" name="name" class="form-control" value={{chord.name}}>
                                </div>
                                <div class="form-group">
                                    <label>Tonality</label>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="tonality" value="magor" checked={{chord.tonality}}>
                                        <label class="form-check-label" for="inlineRadio1">Magor</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="tonality" value="minor" checked={{chord.tonality}}>
                                        <label class="form-check-label" for="inlineRadio2">Minor</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="notesQuantity">Quantity of notes (from 3 to 6)</label>
                                    <input type="number" name="notesQuantity" min="3" max="6" value={{chord.notesQuantity}}>
                                </div>
                                {{#user.role}}
                                <label>Select new picture</label>
                                <div class="custom-file">
                                    <input type="file" name="image" class="custom-file-input" id="customFile">
                                    <label class="custom-file-label" for="customFile">Choose chord picture...</label>
                                </div>
                                {{/user.role}}
                                {{#user.role}}
                                <button class="btn btn-outline" type="submit">Update</button>
                                <button class="btn btn-outline " type="reset">Reset</button>
                                {{/user.role}}
                                <form>
                        </div>

                    </div>

                </div>
            </div>

        </div>

        {{>footer}}
</body>

</html>