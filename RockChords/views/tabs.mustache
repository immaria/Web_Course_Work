{{>head}}
<script src="/javascripts/script1.js"></script>
<link rel="stylesheet" href="stylesheets/style.css">
<body>
  <div class="page">
    {{>header}}
    <div class="container" style="margin-top:100px">
      <form action="/tabs">

        <div class="input-group my-1">
          <div class="input-group-prepend">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </div>
          <input type="search" name="byFilter" class="form-control" placeholder="Enter chord name..." aria-label="" aria-label="Search">
        </div>
      </form>{{^tabs.length}}
      <span>
        It seems this tab collection doesn`t exist yet :(
      </span>
      {{/tabs.length}}
      <button class="btn btn-outline-secondary my-1 mr-2" onclick="location.href='/tabs/new'">Create new collection</button>
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <h1 class="display-5">{{title}}</h1>
          {{#tabs}}
          <div class="list-group list-group-flush">
            <div class="list-group-item list-group-item-action">
              <img width="100" height="100" class="my-2 ml-2 center-cropped float-left" src={{imageUrl}}>
              <div class="float-left mt-13 ml-3">
                <div class="mt-3">{{name}}</div>
                <button class="btn btn-outline-secondary my-1 mr-2" onclick="location.href=`/tabs/{{id}}`">View more</button>
              </div>
            </div>
          </div>
          {{/tabs}}
        <div class="text-center">
            <div class="btn-group btn-group mt-4" role="group" aria-label="Page switcher">
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <a class='messages-nav-button' href="/tabs?page={{prevPage}}" name="page" value={{prevPage}}>
                <button type="button" onclick="location.href='/tabs'" class="btn btn-outline-secondary">
                  Previous</button></a>
                {{#items}}
                <!-- <li class="btn-group btn-group mt-4"> -->
                <a class='messages-nav-button' href="/tabs?page={{.}}"></a>
                </li>
                <button type="button" onclick="location.href='/tabs?page={{.}}'" class="btn btn-outline-secondary">{{.}}</button>
                {{/items}}
                <a class='messages-nav-button' href="/tabs?page={{nextPage}}" name="page" value={{nextPage}}>
                  <button type="button" onclick="location.href='/tabs'" class="btn btn-outline-secondary">Next</button></a>
            </ul>
          </nav>
        </div>

{{>footer}}
</body>
</div>
</body>